{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist/test",
		"sourceMap": true,
	//	"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"noUnusedLocals": true,
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"paths": {
			"@async/*": ["async/*"],
			"@routes/*": ["app/routes/*"],
			"@app/*": ["app/*"],
			"@components/*": ["components/*"],
			"@core/*": ["core/*"],
			"@util/*": ["util/*"]
		}
	},
	"include": [
		"./src/**/*",
		"./lib/**/*",
		"./test/**/*"
	]
}